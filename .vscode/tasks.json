{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",  // Generates debugging information (.pdb)
                "/EHsc", // Enables exception handling
                "/nologo",
                "/Fo${fileDirname}\\build\\", // Store .obj files in a "build" subfolder
                "/Fe${fileDirname}\\build\\${fileBasenameNoExtension}.exe", // Store the final executable in a "bin" subfolder
                "/Fd${fileDirname}\\build\\${fileBasenameNoExtension}.pdb", // Store the PDB file in "bin" folder
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}